    <h1>Listing reviews</h1>
    <%= link_to 'Bids', controller: 'bids' %>
    <%= link_to "Add Bid", new_job_bid_path(@job) %>

    <table>
      <tr>
        <th>Job</th>
        <th>Contractor</th>
      </tr>

      <% @job.bids.each do |bid| %>
        <tr>
          <td></td>
          <td></td>
          <td><%= bid.job.title%></td>
          <td><%= bid.job.description%></td>
          <td><%= bid.description %></td>
          <td><%= bid.amount %></td>
          <td></td>
          <td><%= link_to 'Show Job', [@job] %></td>
          <td><%= link_to 'Edit', edit_job_bid_path(@job, bid) %></td>
          <td><%= link_to 'Delete Bid', [@job, bid],
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </table>
    <%= link_to 'Back', job_path(@job) %>
    
    <script src="" async defer></script>
  </body>
