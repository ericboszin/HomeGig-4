        <h1>New bid</h1>

        <%= form_with(model: [@job, @bid], local: true) do |form| %>
            <% if @bid.errors.any? %>
                <div id="error_explanation">
                    <%= pluralize(@bid.errors.count, "error") %> prohibited this bid from being saved:
                <ul>
                    <% @bid.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                    <% end %>
                </ul>
                </div>
            <% end %>

            <p>
            <%= form.label :description %><br>
            <%= form.text_field :description %>
            </p>
        
            <p>
            <%= form.label :amount %><br>
            <%= form.text_area :amount %>
            </p>
        
            <p>
            <%= form.submit %>
            </p>
        <% end %>
        <%= link_to 'Back', job_bids_path(@job) %>
        
        <script src="" async defer></script>
    </body>
