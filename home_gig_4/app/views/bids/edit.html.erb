<html class="no-js"> <!--<![endif]-->
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Edit bid</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="">
</head>
<body>
<%= render "layouts/nav" %>
<%= render "layouts/alerts" %>

<!--[if lt IE 7]>
<p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a>
  to improve your experience.</p>
<![endif]-->
<div class="container">
  <div class="text-center mb-4">
    <h1 class="h3 mb-3 font-weight-normal">Edit bid</h1>
  </div>

  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8 justify-content-centre">

      <%= bootstrap_form_with(model: [@job, @bid], local: true) do |form| %>
        <% if @bid.errors.any? %>
          <div id="error_explanation">
            <%= pluralize(@bid.errors.count, "error") %> prohibited this bid from being saved:
            <ul>
              <% @bid.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.text_field :description %>
        </div>

        <div class="form-group">
          <%= form.text_area :amount %>
        </div>

        <div class="form-group">
          <%= form.text_area :duration %> days
        </div>

        <div class="form-group">
          <%= form.date_field :starting_date %>
        </div>

        <p>
          <%= form.submit %>
        </p>
      <% end %>
      <%= link_to 'Show', [@job, @bid] %> |
      <%= link_to 'Back', job_bids_path(@job) %>
    </div>
  </div>
</div>
</body>
</html>