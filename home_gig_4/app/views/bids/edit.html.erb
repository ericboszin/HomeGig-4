<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Edit bid</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="">
</head>
<body>
<%= render "layouts/nav" %>
<%= render "layouts/alerts" %>

<!--[if lt IE 7]>
<p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a>
  to improve your experience.</p>
<![endif]-->
<div class="container">
  <div class="text-center mb-4">
    <h1 class="h3 mb-3 font-weight-normal">Edit bid</h1>
  </div>

  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8 justify-content-centre">

      <%= bootstrap_form_with(model: [@job, @bid], local: true) do |form| %>
        <% if @bid.errors.any? %>
          <div id="error_explanation">
            <%= pluralize(@bid.errors.count, "error") %> prohibited this bid from being saved:
            <ul>
              <% @bid.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.text_area :description, help: "Please type in the work you will be doing" %>
        </div>
        <div class="row">
          <div class="col mb-3">
            <%= form.number_field :amount, prepend: "$", help: "Total payment expected at the end of the job" %>
          </div>
        </div>
        <div class="row">
          <div class="col mb-3">
            <%= form.number_field :duration, help: "Duration should be in days", append: "days" %>
          </div>
        </div>
        <div class="row">
          <div class="col mb-3">
            <%= form.date_select :starting_date, help: "Date you're expected to start working on job" %>
          </div>
        </div>

        <div class="actions">
          <%= form.submit class: "btn btn-block btn-primary" %>
        </div>
      <% end %>
      <br>
      <%= button_to 'Back', job_path(@job), class: "btn btn-block btn-dark", :method => :get %>
    </div>
  </div>
</div>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
