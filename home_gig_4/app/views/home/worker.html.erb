<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title></title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
  </head>
  <body>
    <!--[if lt IE 7]>
      <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->

    <%= render 'layouts/nav' %>
    <div class="container mt-3">
      <div class="text-center mb-4">
        <%= render 'layouts/alerts' %>
        <h1 class="h3 mb-3 font-weight-normal">Welcome <%=current_user.first_name.capitalize %>!</h1>
      </div>

      <div class="row justify-content-center">
        <div class="col-2 mb-3">
          <a class="btn btn-primary btn-block" href= <%= jobs_explore_path %> role="button">
            Explore jobs
          </a>
        </div>
      </div>

      <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10 justify-content-centre">
          <% if @bids.present? %>
            <div class="mb-4">
              <h4 class="h4 mb-3 font-weight-normal">My bids</h4>
            </div>
            <table class="table table-hover">
              <thead>
                <tr>
                  <th scope="col">Job</th>
                  <th scope="col">Bid amount</th>
                  <th scope="col">Start date</th>
                  <th scope="col">Bid accepted</th>
                  <th scope="col">Job status</th>
                  <th scope="col">Edit</th>
                  <th scope="col">Delete</th>
                </tr>
              </thead>
              <tbody>
                <% @bids.each do |bid| %>
                  <tr>
                    <td style="cursor: pointer;" onclick="location.href='<%=job_path(bid.job)%>'"><%= bid.job.title %></td>
                    <td style="cursor: pointer;" onclick="location.href='<%=job_bid_path(bid.job, bid)%>'"><%= number_to_currency(bid.amount) %></td>
                    <td style="cursor: pointer;" onclick="location.href='<%=job_bid_path(bid.job, bid)%>'"><%= bid.starting_date.to_date %></td>
                    <% if bid.selected > 0 %>
                      <td style="cursor: pointer;" onclick="location.href='<%=job_bid_path(bid.job, bid)%>'">Yes</td>
                    <% else %>
                      <td style="cursor: pointer;" onclick="location.href='<%=job_bid_path(bid.job, bid)%>'">No</td>
                    <% end %>
                    <td style="cursor: pointer;" onclick="location.href='<%=job_bid_path(bid.job, bid)%>'"><%= bid.job.status.capitalize %></td>
                    <td><%= link_to edit_job_bid_path(bid.job, bid) do %>
                        <i class="fas fa-cog"></i>
                      <% end %>
                    </td>
                    <td><%= link_to job_bid_path(bid.job, bid.id),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } do %>
                          <i class="fas fa-trash"></i>
                        <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <p class="lead text-center">
              You have no jobs yet! Click "Explore jobs" to see all available jobs 
            </p>
          <% end %>
        </div>
      </div>
    </div>
    <%= render 'layouts/footer' %>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>
