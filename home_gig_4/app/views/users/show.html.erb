<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>User profile</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="">
  </head>
  <body>
  
    <%= render "layouts/nav" %>

    <!--[if lt IE 7]>
      <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->

    <div class="container mt-3">
      <div class="text-center mb-4">
        <h1 class="h3 mb-3 font-weight-normal">User Profile</h1>
      </div>

      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8 justify-content-centre">
          <% if user_signed_in? %>
            <% if current_user.id == @user.id %>
              <%= link_to 'Edit Profile', edit_user_registration_path %>
            <% end %>

            <p>
              <strong>Account Type:</strong>
              <%= @user.role %>
            </p>

            <p>
              <strong>Name:</strong>
              <%= @user.first_name %>
              <%= @user.last_name %>
            </p>

            <p>
              <strong>Birthday:</strong>
              <%= @user.birthday %>
              
            </p>

            <p>
              <strong>Country:</strong>
              <%= @user.country_name %>
            </p>

            <p>
              <strong>Phone Number:</strong>
              <%= @user.phone %>
            </p>
            <p>
              <strong>Email:</strong>
              <%= @user.email %>
            </p>

            <p>
              <strong>Skills:</strong>
              <%= @user.skill %>
            </p>

            <p>
              <strong>About Me:</strong>
              <%= @user.aboutme %>
            </p>

            <p>
            <% if @user.role == "worker" %>
                <strong>Reviews:</strong></br>
                </br>
                <% Review.where(worker_id: @user.id).each do |reviews| %>
                  <strong> Job:</strong></br>
                  <%= link_to reviews.job.title, (reviews.job) %> </br>
                  <strong> Created at:</strong></br>
                  <%= reviews.created_at %> </br>
                  <strong> Rating:</strong></br>
                  <%= reviews.rating %> </br>
                  <strong> Comments:</strong></br>
                  <%= reviews.text %> </br>
                  </br>
                <% end %>
          <% end %>
          </p>
          <%= link_to "Back", :back %>
          <% else %>
            <p>Please Sign Up or Sign In to view the content.</p>
            <h2><%= link_to "Sign up", new_user_registration_path%></h2>
            <h2><%= link_to "Sign In", new_user_session_path%></h2>
          <% end %>
        </div>
      </div>
    </div>
    <script src="" async defer></script>
  </body>
</html>
