<div class="container">
  <div class="text-center mb-4">
    <%= render 'layouts/alerts' %>
    <h1 class="h3 mb-3 font-weight-normal">Edit job</h1>
  </div>

  <%= bootstrap_form_with(model: @job, local: true) do |form| %>
    <% if @job.errors.any? %>
      <div id="error_explanation">
        <%= pluralize(@job.errors.count, "error") %> prohibited this review from being saved:
        <ul>
          <% @job.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col mb-3">
        <%= form.text_field :title, label: "Job Title" %>
      </div>
    </div>

    <div class="row">
      <div class="col mb-3">
        <%= form.text_area :description %>
      </div>
    </div>

    <div class="row">
      <div class="col mb-3">
        <%= form.number_field :price, prepend: "$" %>
      </div>
    </div>

    <div class="row">
      <div class="col mb-3">
        <%= form.submit class: "btn btn-block btn-success" %>
      </div>
    </div>

  <% end %>
  <div class="row">
    <div class="col">
      <%= button_to 'Cancel', job_path(@job), method: :get, class: "btn btn-block btn-danger" %>
    </div>
  </div>
</div>
<script src="" async defer></script>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
