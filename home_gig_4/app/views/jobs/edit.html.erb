        <h1>Edit job</h1>

        <%= form_with(model: @job, local: true) do |form| %>
            <% if @job.errors.any? %>
                <div id="error_explanation">
                    <%= pluralize(@job.errors.count, "error") %> prohibited this review from being saved:
                <ul>
                    <% @job.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                    <% end %>
                </ul>
                </div>
            <% end %>

            <p>
            <%= form.label :title %><br>
            <%= form.text_area :title %>
            </p>

            <p>
            <%= form.label :description %><br>
            <%= form.text_area :description %>
            </p>

            <p>
                <%= form.label :price %><br>
                <%= form.text_field :price %>
            </p>

            <p class="field">
                <%= form.label :status %><br />
                <%= form.select(:status, Job.statuses.keys.map {|status| [status.titleize, status]})%>
            </p>

            <p>
            <%= form.submit %>
            </p>

        <% end %>

        <%= link_to 'Back', @job %>
        
        <script src="" async defer></script>
    </body>
</html>