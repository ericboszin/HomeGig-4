<div class="container">
  <div class="text-center mb-4">
    <%= render 'layouts/alerts' %>
    <h1 class="h3 mb-3 font-weight-normal">Add a Job</h1>
  </div>
  <%= bootstrap_form_with scope: :job, url: jobs_path, local: true do |form| %>
    <% [:notice, :warning, :error].each do |key| %>
      <% if flash[key] %>
        <%= flash[key] %>
      <% end %>
    <% end %>

    <div class="row">
      <div class="col-md-3 mb-3"></div>
      <div class="col-md-6 mb-3">
        <%= form.text_field :title, label: "Job Title" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3 mb-3"></div>
      <div class="col-md-6 mb-3">
        <%= form.text_area :description %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3 mb-3"></div>
      <div class="col-md-6 mb-3">
        <%= form.number_field :price, prepend: "$" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4 mb-3"></div>
      <div class="col-md-2 mb-3">
        <%= form.submit class: "btn btn-block btn-success" %>
      </div>

  <% end %>
  <div class="col-md-2 mb-3">
    <%= button_to 'Cancel', home_owner_path, method: :get, class: "btn btn-block btn-danger" %>
  </div>
  </div>
</div>
<%= render 'layouts/footer' %>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
