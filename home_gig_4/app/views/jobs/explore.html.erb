<%= render 'layouts/nav' %>

<div class="container mt-3">
  <div class="text-center mb-4">
    <%= render 'layouts/alerts' %>
    <h1 class="h3 mb-3 font-weight-normal">Explore jobs</h1>
  </div>

  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10 justify-content-centre">
      <div class="row">
        <div class="col justify-content-centre">
          <% if @jobs.present? %>
            <div class="mb-4">
              <h4 class="h4 mb-3 font-weight-normal">Available jobs</h4>
            </div>
            <table class="table table-hover">
              <thead>
              <tr>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col">Status</th>
              </tr>
              </thead>
              <tbody>
              <% @jobs.each do |job| %>
                <tr onclick="location.href='<%=job_path(job)%>'">
                  <td style="cursor: pointer;"><%= job.title %></td>
                  <td style="cursor: pointer;"><%= job.description %></td>
                  <td style="cursor: pointer;"><%= number_to_currency(job.price) %></td>
                  <td style="cursor: pointer;"><%= job.status %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          <% else %>
            <p class="lead text-center">
              You have no jobs yet! Click "Add job" to create a new one
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'layouts/footer' %>

