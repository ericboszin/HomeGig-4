<%= link_to 'Home', home_worker_path %>
<%= link_to 'Explore Jobs', jobs_explore_path %>
<% if user_signed_in? %>
  <%= link_to("Profile", user_path(current_user)) %>
<% end %>
<%= link_to 'Sign out', destroy_user_session_path, method: :delete %>

<h1>New Jobs</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @jobs.each do |job| %>
    <tr>
      <td><%= job.title %></td>
      <td><%= job.description %></td>
      <td><%= job.price %></td>
      <td><%= job.status %></td>
      <td><%= link_to 'Show', job_path(job) %></td>
  <% end %>
</table>